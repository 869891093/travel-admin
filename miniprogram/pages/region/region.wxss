/* region.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 搜索栏样式 */
.search-section {
  padding: 20rpx;
  background: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  border: 1rpx solid #e5e5e5;
}

.search-input {
  flex: 1;
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
}

/* 主要内容区域 */
.main-content {
  display: flex;
  height: calc(100vh - 120rpx);
  width: 100%;
}

/* 左侧导航栏 */
.sidebar {
  width: 200rpx;
  background: #f8f8f8;
  overflow-y: auto;
  border-right: 1rpx solid #e5e5e5;
  flex-shrink: 0;
}

.nav-item {
  position: relative;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.nav-item:active {
  background: #f0f0f0;
}

.nav-item.active {
  background: var(--primary-color);
  color: white;
}

.nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--primary-color);
}

.nav-text {
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.nav-item.active .nav-text {
  color: white;
}

/* 右侧内容区域 */
.content-area {
  flex: 1;
  background: white;
  overflow-y: auto;
  padding: 20rpx;
  width: 0; /* 确保flex: 1生效 */
}

/* 区域指示器 */
.region-indicator {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.region-badge {
  background: var(--primary-color);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}

.region-breadcrumb {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.breadcrumb-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

/* 产品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.product-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.product-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx;
}

.overlay-text {
  color: white;
  font-size: 22rpx;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag {
  background: var(--primary-color);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.product-price {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-text {
  margin-top: 20rpx;
  text-align: center;
}

/* 悬浮客服按钮 */
.float-chat {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #ff6b35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.3);
  z-index: 1000;
}

.chat-icon {
  font-size: 40rpx;
  color: white;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .sidebar {
    width: 180rpx;
  }
  
  .content-area {
    padding: 15rpx;
  }
  
  .product-image {
    height: 180rpx;
  }
} 