/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 权限信息样式 - 减少margin */
.permission-info {
  background: rgba(75, 110, 88, 0.1);
  padding: 10rpx 20rpx;
  margin: 10rpx 20rpx;
  border-radius: 15rpx;
  text-align: center;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.permission-text {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 导航菜单 - 优化自适应 */
.nav-menu {
  display: flex;
  background: white;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  margin: 0 8rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
  transition: all 0.3s ease;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-item:first-child {
  margin-left: 0;
}

.nav-item:last-child {
  margin-right: 0;
}

.nav-item.active {
  background: var(--primary-color);
  color: white;
}

.nav-item:active {
  transform: translateY(-2rpx);
}

/* 管理员管理按钮 - 优化宽度 */
.admin-manage-section {
  padding: 15rpx 20rpx;
  background: white;
  margin: 0 20rpx 10rpx 20rpx;
  flex-shrink: 0;
  display: block;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.admin-manage-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 内容区域 - 优化宽度 */
.content-area {
  flex: 1;
  padding: 0 20rpx 10rpx 20rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.page-content {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
  flex: 1;
  width: 100%;
  box-sizing: border-box;
}

/* 数据列表 - 确保没有多余空白 */
.data-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  width: 100%;
}

/* 产品卡片样式 */
.data-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  transition: transform 0.2s ease;
  flex-wrap: wrap;
  margin-bottom: 0; /* 移除底部margin，使用gap控制间距 */
  width: 100%;
  box-sizing: border-box;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 0;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: block;
}

.item-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.item-price {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: bold;
  display: block;
}

.status-tag {
  background-color: #e6f7d9;
  color: #52c41a;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
