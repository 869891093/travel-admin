/* banner-edit.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
  width: 100%;
}

.form-header {
  background: #4b6e58;
  color: white;
  padding: 30rpx 40rpx;
  width: 100%;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.back-btn {
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  min-width: 120rpx;
  text-align: center;
}

.back-text {
  font-size: 28rpx;
  color: white;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.placeholder {
  min-width: 120rpx;
}

.form-content {
  padding: 20rpx;
  width: 100%;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  margin-bottom: 25rpx;
  width: 100%;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 30rpx;
}

.textarea {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fafafa;
  min-height: 160rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}

.picker {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background: #fafafa;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 30rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  line-height: 30rpx;
}

.image-preview {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  width: 100%;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.form-footer {
  padding: 40rpx 0;
  width: 100%;
}

.button-group {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn {
  padding: 25rpx 50rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  min-width: 180rpx;
  height: 80rpx;
  line-height: 30rpx;
}

.btn-primary {
  background: #4b6e58;
  color: white;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.btn-primary:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(75, 110, 88, 0.3);
}

.btn-cancel:active {
  transform: translateY(-2rpx);
  background: #e8e8e8;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-content {
    padding: 15rpx;
    max-width: 100%;
  }
  
  .form-section {
    padding: 20rpx;
    margin-bottom: 15rpx;
  }
  
  .form-header {
    padding: 20rpx 30rpx;
  }
  
  .form-title {
    font-size: 32rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .input, .textarea, .picker {
    padding: 20rpx 15rpx;
    font-size: 26rpx;
  }
  
  .input, .picker {
    height: 70rpx;
    line-height: 30rpx;
  }
  
  .textarea {
    min-height: 140rpx;
    line-height: 35rpx;
  }
  
  .label {
    font-size: 26rpx;
  }
  
  .btn {
    padding: 20rpx 40rpx;
    font-size: 26rpx;
    min-width: 160rpx;
    height: 70rpx;
    line-height: 30rpx;
  }
  
  .button-group {
    gap: 15rpx;
  }
}

/* 确保在小屏幕上也能正常显示 */
@media (max-width: 600rpx) {
  .form-content {
    padding: 10rpx;
  }
  
  .form-section {
    padding: 15rpx;
  }
  
  .button-group {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .btn {
    width: 100%;
  }
}

/* 图片上传样式 */
.image-upload-section {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
}

.btn-upload {
  width: 100%;
  height: 80rpx;
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

.url-input-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e9ecef;
}

.label-small {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.input-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
  line-height: 1.4;
}