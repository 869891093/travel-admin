  border-radius: 30rpx;
  padding: 18rpx 35rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(75, 110, 88, 0.3);
}

