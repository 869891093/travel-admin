/* 行程安排样式 - 修复输入框交互问题 */
.itinerary-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 28rpx;
  background: #fff !important; /* 强制白色背景 */
  box-sizing: border-box;
  line-height: 1.6;
  resize: none;
  position: relative; /* 确保定位正确 */
  z-index: 1; /* 确保在最上层 */
  pointer-events: auto; /* 确保可以交互 */
}

.itinerary-textarea:focus {
  border-color: #4b6e58;
  background: #fff !important;
  box-shadow: 0 0 0 4rpx rgba(75, 110, 88, 0.1);
}

/* 费用说明样式 - 重新设计 */
.fees-container {
  width: 100%;
}

.fee-category {
  margin-bottom: 35rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
}

.fee-category-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #4b6e58;
  margin-bottom: 20rpx;
  display: block;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.fee-category-title::before {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #4b6e58 0%, #5a7a65 100%);
  border-radius: 2rpx;
}

.fee-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.fee-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background: #fafafa;
  padding: 15rpx;
  border-radius: 15rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.fee-item:hover {
  background: #f5f5f5;
  border-color: #4b6e58;
}

/* 费用输入框样式 - 修复交互问题 */
.fee-input {
  flex: 1;
