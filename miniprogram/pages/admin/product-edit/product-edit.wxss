  .cover-image-preview {
    width: 100rpx;
    height: 70rpx;
  }
  
  .cover-image-name {
    font-size: 24rpx;
  }
  
  .btn-move-up, .btn-move-down, .btn-remove-cover-image {
    min-width: 35rpx;
    width: 35rpx;
    font-size: 18rpx;
    padding: 6rpx;
  }
} 

/* 行程安排样式 - 重新设计 */
.itinerary-container {
  width: 100%;
}

.itinerary-upload {
  text-align: center;
  padding: 25rpx;
  border: 2rpx dashed #4b6e58;
  border-radius: 20rpx;
