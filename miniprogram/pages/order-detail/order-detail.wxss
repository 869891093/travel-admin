/* order-detail.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #4b6e58 0%, #6b8e78 100%);
  min-height: 100vh;
  width: 100%;
  max-width: 100vw;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 头部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(75, 110, 88, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(75, 110, 88, 0.2);
}

.back-icon {
  font-size: 40rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.header-right {
  width: 60rpx;
}

/* 订单详情内容 */
.order-detail {
  flex: 1;
  padding: 0 20rpx 20rpx 20rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

/* 状态卡片 */
.status-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 20rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.order-no {
  font-size: 24rpx;
  color: var(--text-light);
}

.copy-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(75, 110, 88, 0.1);
  transition: all 0.3s ease;
}

.copy-btn:active {
  background: rgba(75, 110, 88, 0.2);
}

.copy-icon {
  font-size: 28rpx;
}

/* 卡片通用样式 */
.section-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 20rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.title-icon {
  margin-right: 12rpx;
  font-size: 24rpx;
}

/* 产品信息 */
.product-info {
  display: flex;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.product-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
  flex-shrink: 0;
  min-width: 160rpx;
}

.product-details {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.travel-date, .travelers {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: var(--text-light);
}

.label {
  color: var(--text-light);
  margin-right: 8rpx;
}

.value {
  color: var(--text-color);
  font-weight: 500;
}

/* 联系信息 */
.contact-info {
  padding: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 费用明细 */
.price-details {
  padding: 24rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.subtotal {
  color: var(--primary-color);
  font-weight: bold;
}

.price-divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 16rpx 0;
}

.price-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.total-value {
  color: var(--primary-color);
  font-size: 32rpx;
}

/* 时间信息 */
.time-info {
  padding: 24rpx;
}

.time-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

/* 操作按钮 */
.action-buttons {
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
}

.btn-refund {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.btn-refund:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 107, 0.4);
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 100rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(75, 110, 88, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 16rpx rgba(75, 110, 88, 0.4);
} 