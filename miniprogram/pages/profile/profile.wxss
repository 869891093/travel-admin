/* pages/profile/profile.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  min-height: 100vh;
  width: 100vw;
  background: linear-gradient(135deg, #4b6e58 0%, #6b8e78 100%);
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  overflow-x: hidden;
  /* 重写app.wxss中的居中样式 */
  display: block;
  align-items: stretch;
  justify-content: flex-start;
}

/* 登录界面 */
.login-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 100%;
  max-width: 500rpx;
  box-sizing: border-box;
}

.login-header {
  margin-bottom: 60rpx;
}

.login-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
}

.login-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 15rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: var(--text-light);
}

.login-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(75, 110, 88, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 16rpx rgba(75, 110, 88, 0.4);
}

.login-btn-text {
  color: white;
}

/* 用户头部 */
.user-header {
  padding: 40rpx 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  align-items: center;
  width: 100%;
  position: relative;
}

.refresh-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-50%) scale(0.95);
}

.refresh-icon {
  font-size: 28rpx;
  color: white;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  width: 0;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  width: 100%;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  width: 100%;
}

/* 管理员卡片 - 减少上边距 */
.admin-card {
  margin: 10rpx 20rpx 20rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.admin-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: background-color 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.admin-item:active {
  background: rgba(75, 110, 88, 0.05);
}

.admin-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
  flex-shrink: 0;
}

.admin-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
  width: 0;
}

.admin-badge {
  font-size: 20rpx;
  color: white;
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

/* 信息卡片 */
.info-card {
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.edit-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(75, 110, 88, 0.1);
  transition: all 0.3s ease;
}

.edit-btn:active {
  background: rgba(75, 110, 88, 0.2);
}

/* 信息项 */
.info-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.label-text {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
}

.required {
  color: #ff4757;
  margin-left: 5rpx;
}

.info-content {
  flex: 1;
  display: flex;
  align-items: center;
  width: 0;
}

.info-value {
  font-size: 28rpx;
  color: var(--text-color);
  width: 100%;
}

.info-placeholder {
  font-size: 28rpx;
  color: var(--text-light);
  width: 100%;
}

/* 选择器样式 */
.picker-value {
  font-size: 28rpx;
  color: var(--text-color);
  padding: 10rpx 20rpx;
  background: rgba(75, 110, 88, 0.05);
  border-radius: 10rpx;
  border: 2rpx solid rgba(75, 110, 88, 0.1);
  width: 100%;
  box-sizing: border-box;
}

/* 手机号按钮 */
.phone-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  min-width: 160rpx;
  flex-shrink: 0;
}

.phone-btn:active {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(75, 110, 88, 0.3);
}

/* 编辑输入框 */
.edit-input {
  font-size: 28rpx;
  color: var(--text-color);
  padding: 10rpx 20rpx;
  background: rgba(75, 110, 88, 0.05);
  border-radius: 10rpx;
  border: 2rpx solid rgba(75, 110, 88, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.edit-input:focus {
  border-color: var(--primary-color);
  background: rgba(75, 110, 88, 0.1);
}

/* 菜单卡片 */
.menu-card {
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: background-color 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(75, 110, 88, 0.05);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
  width: 0;
}

/* 退出登录 */
.logout-section {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #ff4757;
  color: white;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.version-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
} 

