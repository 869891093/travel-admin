/* 登录提示 - 灰色小字体 */
.login-tips {
  text-align: left;
  padding: 20rpx 0;
}

.tips-text {
  display: block;
  font-size: 22rpx;
  color: #8a8a8a;
  margin-bottom: 12rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.tips-item {
  display: block;
  font-size: 20rpx;
  color: #999999;
  line-height: 1.4;
} 

