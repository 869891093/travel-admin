/* miniprogram/pages/admin-refund/admin-refund.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.refresh-btn {
  padding: 10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.refresh-btn .icon {
  font-size: 32rpx;
  color: white;
}

/* 筛选区域 */
.filter-section {
  padding: 20rpx 30rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  color: #333;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 退款列表 */
.refund-list {
  padding: 0 30rpx 30rpx;
}

.loading, .empty {
  text-align: center;
  padding: 100rpx 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 退款项目 */
.refund-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.refund-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-bottom: 1rpx solid #dee2e6;
}

.refund-id {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.refund-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-approved {
  background: #d1ecf1;
  color: #0c5460;
}

.status-rejected {
  background: #f8d7da;
  color: #721c24;
}

.status-completed {
  background: #d4edda;
  color: #155724;
}

/* 退款信息 */
.refund-info {
  padding: 24rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  min-width: 160rpx;
  flex-shrink: 0;
}

.amount {
  color: #e74c3c;
  font-weight: bold;
  font-size: 32rpx;
}

.time {
  color: #666;
  font-size: 26rpx;
}

.reason, .note {
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 操作按钮 */
.refund-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #dee2e6;
}

.btn-review {
  flex: 1;
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-review:active {
  transform: translateY(-1rpx);
}

.btn-detail {
  flex: 1;
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
  border: 1rpx solid #6c757d;
  border-radius: 25rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-detail:active {
  background: rgba(108, 117, 125, 0.2);
}
